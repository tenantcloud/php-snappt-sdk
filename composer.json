{
	"name": "tenantcloud/snappt-sdk",
	"description": "Snappt laravel partner API SDK.",
	"license": "MIT",
	"require": {
		"php": ">=8.3",
		"guzzlehttp/guzzle": "^7.8",
		"tenantcloud/guzzle-helper": "^1.5|^2.0",
		"tenantcloud/data-transfer-objects": "^1.6|^2.0"
	},
	"require-dev": {
		"pestphp/pest": "^3.8",
		"php-cs-fixer/shim": "^3.75",
		"tenantcloud/php-cs-fixer-rule-sets": "~3.4.1",
		"phpstan/phpstan": "^2.1.17",
		"phpstan/phpstan-phpunit": "^2.0",
		"phpstan/phpstan-webmozart-assert": "^2.0",
		"phpstan/phpstan-mockery": "^2.0",
		"nunomaduro/larastan": "^3.0",
		"orchestra/testbench": "^7.0|^8.5|^9.0|^10.0"
	},
	"autoload": {
		"psr-4": {
			"TenantCloud\\Snappt\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "vendor/bin/pest",
		"coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage-html coverage",
		"cs-fix": "vendor/bin/php-cs-fixer fix -v --show-progress=dots",
		"phpstan":  "vendor/bin/phpstan analyse --memory-limit=2G",
		"testbench": "vendor/bin/testbench"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	},
	"extra": {
		"laravel": {
			"providers": [
				"TenantCloud\\Snappt\\SnapptSdkServiceProvider"
			]
		}
	}
}
